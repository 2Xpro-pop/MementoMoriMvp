@page "/personals"

<MudTable Items="dynamics" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>Фио</MudTh>
        <MudTh>Телефон</MudTh>
        <MudTh>Зарплата</MudTh>
        <MudTh>Должность</MudTh>
        <MudTh>Email</MudTh>
        <MudTh>Действия</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Фио">@context.FullName</MudTd>
        <MudTd DataLabel="Телефон">@context.Phone</MudTd>
        <MudTd DataLabel="Зарплата">@context.Salary</MudTd>
        <MudTd DataLabel="Должность">@context.Position</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd> 
            <MudButton Variant="Variant.Filled" Color="Color.Primary">Редактировать</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="@(async _ => dynamics.Remove(context))">Удалить</MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>

